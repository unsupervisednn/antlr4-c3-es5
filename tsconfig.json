{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "es5",
		"outDir": "out",
		"removeComments": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"inlineSources": true,
		"isolatedModules": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"strictNullChecks": true
	},
	"compileOnSave": true,
	"include": [
		"src/**/*.ts", "test/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
